# To use this config on you editor, follow the instructions at:
# https://editorconfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf

[*.{c,h,cpp,hpp,cc}]
indent_style = tab
indent_size = tab

[*.{s,S}]
indent_style = space
indent_size = 4

[*.bp]
indent_style = space
indent_size = 4
